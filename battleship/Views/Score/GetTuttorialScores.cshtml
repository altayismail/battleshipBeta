@using battleshipBeta.Entities
@model List<ExcelObjectTuttorial>
@{
    ViewData["Title"] = "Tuttorial Scores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-info display-6" style="margin-top:25px; margin-bottom:25px; text-align:center;">Tuttorial Scores</h2>
<hr />

<table class="table table-bordered table-striped p-5">
    <tr class="bg-white text-dark">
        <th>Firstname</th>
        <th>Lastname</th>
        <th>Duration (Minute)</th>
        <th>Date / Time</th>
    </tr>
    <tbody id="myTable">
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Firstname</td>
                <td>@item.Lastname</td>
                <td>@(string.Format("{0:0.00}", item.Duration))</td>
                <td>@((DateTime)item.PlayedTime)</td>
            </tr>
        }
    </tbody>
</table>

<div class="alert alert-primary d-flex align-items-center mt-2" role="alert">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
